{
	"name": "@sveleton/config",
	"version": "0.0.0-development",
	"description": "Tailwind plugin for generating colors and variables.",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/types/index.d.ts"
		}
	},
	"keywords": [
		"forewind",
		"tailwind",
		"svelte",
		"components"
	],
	"files": [
		"dist",
		"docs"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/blujedis/forewind-util"
	},
	"bugs": {
		"url": "https://github.com/blujedis/forewind-util/issues"
	},
	"homepage": "https://github.com/blujedis/forewind-util#readme",
	"author": {
		"name": "Blujedis",
		"url": "https://github.com/blujedis"
	},
	"scripts": {
		"clean": "rimraf dist/",
		"build": "npm run clean && tsup && npm run types",
		"types": "tsc --emitDeclarationOnly",
		"types:watch": "tsc --emitDeclarationOnly -w",
		"dev": "tsup --watch src",
		"docs": "rimraf docs/ && typedoc src/index.ts && touch ./docs/.nojekyll",
		"prepare": "husky install",
		"prepublishOnly": "npm run build && npm run docs",
		"semantic-release": "semantic-release --branches main",
		"format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json}\"",
		"lint": "eslint --ignore-path .gitignore . --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "npm run lint -- --fix",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"test": "echo \"Warn: no test specified in @forewind/util\""
	},
	"dependencies": {
		"dot-prop": "^7.2.0",
		"lodash.clonedeep": "^4.5.0",
		"tailwind-merge": "^1.7.0",
		"tailwindcss": "^3.1.8",
		"tinycolor2": "^1.4.2",
		"values.js": "^2.1.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/commit-analyzer": "^9.0.2",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/npm": "^9.0.1",
		"@semantic-release/release-notes-generator": "^10.0.3",
		"@types/lodash.clonedeep": "^4.5.7",
		"@types/node": "18.11.3",
		"@types/tinycolor2": "^1.4.3",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"browserify": "^17.0.0",
		"eslint": "^8.19.0",
		"exorcist": "^2.0.0",
		"husky": "^8.0.1",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.3",
		"rimraf": "^3.0.2",
		"semantic-release": "^19.0.3",
		"tailwindcss": "^3.1.8",
		"tslib": "^2.4.0",
		"tsup": "^6.2.3",
		"typedoc": "^0.23.15",
		"typescript": "^4.8.4"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"splitting": false,
		"sourcemap": true,
		"clean": true,
		"dts": false,
		"treeshake": true,
		"format": [
			"cjs",
			"esm"
		]
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"tag": "latest"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "docs",
							"scope": "README*",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/npm",
				{
					"npmPublish": true
				}
			],
			"@semantic-release/changelog",
			"@semantic-release/git"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.svelte$": [
				"svelte-jester",
				{
					"preprocess": true
				}
			],
			"^.+\\.ts$": "ts-jest"
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"svelte"
		],
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"@testing-library/jest-dom/extend-expect"
		]
	}
}
